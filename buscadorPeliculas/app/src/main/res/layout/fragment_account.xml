<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment">




 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_marginBottom="64dp"
     android:orientation="vertical"
     android:gravity="center_horizontal">

     <Button
         android:id="@+id/editButtonAccount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/baseline_settings_24"
         android:layout_gravity="right"
         android:gravity="center"
         android:layout_marginVertical="8dp"
         android:text="Editar"
         android:layout_marginRight="16dp"
         />

     <Button
         android:id="@+id/saveButtonAccount"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:drawableLeft="@drawable/baseline_check_circle_24"
         android:layout_gravity="right"
         android:gravity="center"
         android:text="Guardar"

         android:layout_marginRight="16dp"
         />


     <ImageView
         android:layout_width="72dp"
         android:layout_height="72dp"
         android:src="@drawable/baseline_adb_24"

         />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:text="Usuario"/>

     <EditText
         android:id="@+id/userEditTextAccount"
         android:layout_width="wrap_content"
         android:layout_height="15dp"
         android:layout_weight="1"
         android:paddingHorizontal="16dp"
         android:text="Usuario por default"/>


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="0dp"
         android:layout_weight="1"

         android:text="Nombre"/>

     <EditText
         android:id="@+id/nameEditTextAccount"
         android:layout_width="wrap_content"
         android:layout_height="15dp"
         android:layout_weight="1"
         android:paddingHorizontal="16dp"
         android:text="nombre Generico"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:text="Email"/>

     <EditText
         android:id="@+id/emailEditTextAccount"
         android:layout_width="wrap_content"
         android:layout_height="15dp"
         android:layout_weight="1"
         android:paddingHorizontal="16dp"
         android:text="default Email"/>



 </LinearLayout>




</FrameLayout>